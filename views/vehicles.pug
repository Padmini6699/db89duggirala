extends layout
 
block content
  h1= title
  - let vehicles= results
  - let destinationcreate = `dispatchCreate(\"/vehicles/create\")`
  div(class="container-fluid mt-3")
    button.btn( class="btn-primary ml-1 btn-lg", onclick= destinationcreate) Create
  div(class="row m-1")
    each i,index in vehicles
      - let destinationupdate = `dispatch(\"/vehicles/update?id=${i._id}\")`
      -let destinationdetail =   `dispatch(\"/vehicles/detail?id=${i._id}\")`
      - let destinationdelete = `dispatchDelete(\"/vehicles/delete?id=${i._id}\")`
      div(class="col-sm-4  m-1" style=("font-weight:bolder")) #{i.vehiclename} - #{i.wheels} - #{i.color} - #{i.price}
        button.btn( class="btn-success ml-1", onclick= destinationdetail) Detail
        button.btn( class="btn-info ml-1", onclick= destinationupdate) Update
        button.btn( class="btn-danger ml-1", onclick= destinationdelete) Delete

  
  script.
      function dispatch(path){
      window.location.href=path
      }
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
      function dispatchCreate(path){
        window.location.href=path
      }
      function dispatchDelete(path){
        window.location.href=path
      }
  